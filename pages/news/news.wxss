/* pages/news/news.wxss */

.header {
  width: 100%;
  height: 100rpx;
  box-shadow: 0px 2px 4px 2px #ccc;
}

.shadow {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.header text {
  font-size: 35rpx;
}

.header image {
  width: 45rpx;
  height: 45rpx;
}

.content {
  margin: 0 20rpx;
}

.news_item {
  font-size: 31rpx;
  height: 120rpx;
  border-bottom: 1rpx solid #ccc;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
}

.created_at {
  position: absolute;
  right: 30rpx;
  margin-top: 30rpx;
}
