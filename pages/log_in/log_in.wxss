/* pages/log_in/log_in.wxss */

/* 页头 */

.header {
  display: flex;
  width: 100%;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0px 2px 4px 2px #ddd;
}

.change {
  text-align: center;
}

.active {
  background-color: #0091a5;
  color: white;
}

.changes {
  display: flex;
}

.icon {
  width: 60rpx;
  height: 60rpx;
  transform: rotate(90deg);
}

.change {
  height: 40rpx;
  width: 250rpx;
  border: 1px solid #0091a5;
}

.f_page {
  color: #0091a5;
}

/* 登录 */

.log {
  margin: 50rpx 0;
}

.log_in {
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}

.title {
  margin: 25rpx 0 10rpx 15rpx;
}

.input {
  background-color: rgba(0, 0, 0, 0.08);
  height: 70rpx;
  width: 600rpx;
}

.i_log {
  background-color: #0091a5;
  color: white;
}

/* 会员注册 */

.n_input {
  background-color: rgba(0, 0, 0, 0.08);
  height: 60rpx;
  width: 300rpx;
}

.member {
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}

.name {
  display: flex;
}

.m_name {
  margin: 10rpx 10rpx 0 0;
}

.point {
  font-size: 27rpx;
}

.m_email {
  margin: 80rpx 0 80rpx 0;
}

.m_password {
  display: flex;
  justify-content: space-between;
}

.point {
  display: flex;
  align-items: center;
}
.error{
  font-size: 26rpx;
  color: red
}
