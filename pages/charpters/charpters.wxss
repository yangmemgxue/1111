/* pages/charpters/charpters.wxss */

/**基础风格样式**/
@import '/towxml/style/main.wxss';

/**如果页面有动态主题切换，则需要将使用到的样式全部引入**/

/**主题配色（浅色样式）**/
@import '/towxml/style/theme/light.wxss';

/**主题配色（深色样式）**/
@import '/towxml/style/theme/dark.wxss';

/* 侧边栏 */

.sidebar {
  position: fixed;
  width: 80%;
  height: 100%;
  background: #fff;
  border-right: 1rpx solid #cccc;
  overflow: scroll;
  /* z-index: 0 */
}

.s_title {
  height: 100%;
  background-color: rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  font-weight: bolder;
}

.s_title text {
  font-size: 40rpx;
  margin: 0 30rpx;
  width: 800rpx;
}

.s_title image {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx 30rpx;
  
}

.s_list {
  display: flex;
  border-bottom: 1rpx solid #cccc;
  margin-left: 20rpx;
  align-items: center;
}

.s_list image {
  width: 40rpx;
  height: 40rpx;
  margin: 30rpx 10rpx;
  justify-content: center;
}

.s_list text {
  flex-wrap: wrap;
  margin: 10rpx 30rpx 10rpx 10rpx;
  width: 380rpx;
}

.time {
  position: relative;
  top: 80%;
  height: 60rpx;
  align-items: center;
}

/*  */

.c-state {
  transform: rotate(0deg) scale(1) translate(80%, 0%);
}

.cover {
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  width: 20%;
  height: 100%;
  top: 0;
  left: 80%;
  transition: all 0.5s ease 0.3s;
  z-index: 999;
}

/*  */

.page-top {
  height: 100vh;
  width: 750rpx;
  background-color: #fff;
  transition: All 0.5s ease 0.3s;
  position: relative;
}

.title {
  width: 100%;
  height: 100%;
  /* display: flex;
  justify-content: center; */
  text-align: center;
  margin: 15rpx 0;
}

.title text{
  padding: 25rpx 0;
  font-size: 36rpx;
  /* display: flex;
  justify-content: center; */
}

.header video {
  width: 100%;
  margin: 0;
  border-top: 5rpx solid rgba(0, 0, 0, 0.4);
}

.list {
  border: 1rpx solid #cccc;
  border-radius: 38rpx;
  display: flex;
  justify-content: center;
  /* justify-items: center; */
  width: 240rpx;
  margin: 40rpx 0 5rpx 20rpx;
}

.list image {
  width: 35rpx;
  height: 35rpx;
  margin: 20rpx 7rpx 20rpx 20rpx;
}

.list text {
  font-size: 30rpx;
  margin: 15rpx 15rpx 15rpx 7rpx;
}

.content {
  padding-top: 690rpx;
}
